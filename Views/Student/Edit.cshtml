@{
}
@model StudentCRUD.Models.Entities.Student;
<form method="post">
	<h1>Edit Student</h1>

	@if (Model is null)
	{
		<p>No student was found with this ID</p>
	}
	else
	{
		<div class="mt-3">
			<label class="form-label">ID</label>
			<input type="text" class="form-control" readonly asp-for="Id" />
		</div>

		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>
		<div class="mt-3">
			<label class="form-label">Email</label>
			<input type="email" class="form-control" asp-for="Email" />
		</div>
		<div class="mt-3">
			<label class="form-label">Phone</label>
			<input type="number" maxlength="10" class="form-control" asp-for="Phone" />
		</div>
		<div class="mt-3">
			<input type="checkbox" class="form-check-input" id="chkSubscribed" asp-for="Subscribed" />
			<label class="form-check-label" for="chkSubscribed">Subscribed</label>
		</div>
		<div class="mt-3">
			<button class="btn btn-primary btn-success">Save</button>
			<a class="btn btn-danger" asp-controller="Student" asp-action="List">Cancel</a>
			@* <button class="btn btn-primary btn-danger" asp-controller="Student" asp-action="List">Cancel</button> *@
		</div>
	}
</form>